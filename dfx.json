{
  "canisters": {
    "backend": {
      "type": "motoko",
      "main": "backend/main.mo",
      "post_install": ["echo 'Hello, World!'"]
    },
    "frontend": {
      "dependencies": ["backend"],
      "type": "assets",
      "source": ["build/"]
    }
  },
  "defaults": {
    "bitcoin": {
      "enabled": true,
      "nodes": ["127.0.0.1:18444"],
      "log_level": "info"
    },
    "build": {
      "packtool": "npm run --silent sources"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4942"
    }
  },
  "output_env_file": ".env",
  "version": 1
}
